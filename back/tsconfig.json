{
  "compilerOptions": {
    "target": "es6",                   // Set the JavaScript version for output files
    "module": "commonjs",              // Use commonjs module, suitable for Node.js
    "strict": true,                    // Enable all strict type-checking options
    "esModuleInterop": true,           // Allows us to import modules like `import pkg from 'module'`
    "skipLibCheck": true,              // Skip type checking of declaration files
    "outDir": "./dist",                // Redirect output structure to the directory
    "rootDir": "./src",                 // Specify the root directory of input files
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "path/to/file"], // Add the file or directory path to include
  "exclude": ["node_modules", "**/*.spec.ts"]
}
